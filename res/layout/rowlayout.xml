<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:id="@+id/relativeLayout" android:focusable="false">
    <TextView android:id="@+id/elTitle" android:layout_width="fill_parent" android:layout_height="wrap_content"
              android:text="@+id/label" android:gravity="center_vertical|left"
              android:layout_column="1" android:autoText="false" android:background="@drawable/list_item"
              android:layout_alignParentBottom="false" android:textColor="@android:color/white"/>
    <ImageView android:id="@+id/icon" android:layout_width="wrap_content" android:layout_height="wrap_content"
           android:background="@drawable/ic_media_play"
           android:layout_alignRight="@+id/elTitle" android:layout_centerVertical="true"/>
</RelativeLayout>